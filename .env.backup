# Application
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
DATABASE_URL="postgresql://admin:admin@localhost:5432/duxfit?schema=public"

# JWT Authentication
JWT_SECRET=duxfit-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=duxfit-refresh-token-secret-key-2024
REFRESH_TOKEN_EXPIRES_IN=30d

# WhatsApp Business API Configuration
# Get these from Meta Business Manager -> WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id-here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token-here
WHATSAPP_API_VERSION=v18.0
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=DuxFit CRM <noreply@duxfit.com>

# EVO Integration (to be configured later)
EVO_API_URL=https://api.evo.com
EVO_API_KEY=your-evo-api-key-here

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
